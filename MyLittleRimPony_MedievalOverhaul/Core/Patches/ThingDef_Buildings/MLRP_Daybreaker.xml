					<filter>
						<thingDefs>
							<li>DankPyon_Coal</li>
						</thingDefs>
					</filter>
					<count>20</count>
				</li>
			</ingredients>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/RecipeDef[@Name="DaybreakerRecipes_TripleChemfuel"]/ingredients</xpath>
		<value>
			<ingredients>
				<li>
					<filter>
						<thingDefs>
							<li>DankPyon_Coal</li>
						</thingDefs>
					</filter>
					<count>30</count>
				</li>
			</ingredients>
		</value>
	</Operation>
	
</Patch>