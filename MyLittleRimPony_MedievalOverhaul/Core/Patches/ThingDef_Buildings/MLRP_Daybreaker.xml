					<filter>
						<thingDefs>
							<li>DankPyon_Coal</li>
						</thingDefs>
					</filter>
					<count>10</count>
				</li>
			</ingredients>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/RecipeDef[@Name="DaybreakerRecipes_DoubleChemfuel"]/ingredients</xpath>
		<value>
			<ingredients>
