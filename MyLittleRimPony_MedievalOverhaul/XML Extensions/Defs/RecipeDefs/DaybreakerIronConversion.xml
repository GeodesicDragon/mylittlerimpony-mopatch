<Defs>

<!--CONVERT IRON INGOTS TO SILVER-->

<RecipeDef ParentName="DaybreakerRecipes_RegularChemfuel">
	<defName>MLRP_DB_ConvertMOIronIngotsIntoSilver</defName>
	<label>convert iron ingots to silver</label>
	<description>Convert 667 iron ingots into 1000 silver.</description>
    <jobString>Converting materials</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <allowMixingIngredients>false</allowMixingIngredients>
    <workAmount>300</workAmount>
	<recipeUsers>
		<li>MLRP_Daybreaker</li>
	</recipeUsers>
    <ingredients>
		<li>
			<filter>
				<thingDefs>
					<li>DankPyon_IronIngot</li>
				</thingDefs>
			</filter>
			<count>667</count>
		</li>
	</ingredients>
	<products>
		<Silver>1000</Silver>
	</products>
</RecipeDef>

<!--CONVERT SILVER TO IRON INGOTS-->

<RecipeDef ParentName="DaybreakerRecipes_RegularChemfuel">
	<defName>MLRP_DB_ConvertSilverIntoMOIronIngots</defName>
	<label>convert silver to iron ingots</label>
	<description>Convert 1000 silver into 667 iron ingots.</description>
    <jobString>Converting materials</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <effectWorking>Cremate</effectWorking>
    <soundWorking>Recipe_Cremate</soundWorking>
    <allowMixingIngredients>false</allowMixingIngredients>
    <workAmount>300</workAmount>
	<recipeUsers>
		<li>MLRP_Daybreaker</li>
	</recipeUsers>
    <ingredients>
		<li>
			<filter>
				<thingDefs>
					<li>Silver</li>
				</thingDefs>
			</filter>
			<count>100</count>
		</li>
	</ingredients>
	<products>
		<DankPyon_IronIngot>667</DankPyon_IronIngot>
	</products>
</RecipeDef>

</Defs>